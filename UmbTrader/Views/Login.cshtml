@inherits Umbraco.Web.Mvc.UmbracoTemplatePage
@using ContentModels = Umbraco.Web.PublishedContentModels;
@{
    Layout = "OuterMaster.cshtml";
    var mode = Request.QueryString["mode"] ?? "login";
}
    @if (Umbraco.MemberIsLoggedOn())
    {
        <h1>You are already logged into the system.</h1>
    }
    else if (mode.ToLower() == "login")
    {
        <h2 class="header-page">Login</h2>
        <hr />
        <div class="header-sub">
            <div>Enter your details below to log in to your account.</div>
        </div>
        <div class="centerd">
            <form class="form form-login centerd">
                <span class="form-input form-input-login">
                    <label for="txtUser">Name:</label>
                    <input type="text" name="user" id="txtUser" placeholder="User name" required />
                </span>
                <span class="form-input form-input-login">
                    <label for="txtPass">Password:</label>
                    <input type="password" name="pass" id="txtPass" placeholder="Password" required />
                </span>
                <span class="form-input form-input-login">
                    <label>&nbsp;</label>
                    <input class="btn btn-sm" type="submit" value="Login" />
                </span>
            </form>
        </div>
    }
    else
    {
        <h2 class="header-page">Register</h2>
        <hr/>
        <div class="header-sub">
            <div>Registering is free, and once you sign up we'll give you a $10,000 demo account.</div>
            <div>If you decide you want to create a live account your settings and favourites will be saved.</div>
        </div>
        <div>
            <form class="form form-login centerd">
                <span class="form-input form-input-login">
                    <label for="txtUser">Name:</label>
                    <input type="text" name="user" id="txtUser" placeholder="User name" required />
                </span>
                <span class="form-input form-input-login">
                    <label for="txtPass">Password:</label>
                    <input type="password" name="pass" id="txtPass" placeholder="Password" required />
                </span>
                <span class="form-input form-input-login">
                    <label for="txtConf">Confirm:</label>
                    <input type="password" name="pass" id="txtConf" required />
                </span>
                <span class="form-input form-input-login">
                    <label>&nbsp;</label>
                    <input class="btn btn-sm" type="submit" value="Register" />
                </span>
            </form>
        </div>
    }